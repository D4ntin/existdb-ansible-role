[Unit]
Description=eXist-db - Native XML Database -
Documentation=http://exist-db.org/exist/apps/doc/
After=syslog.target

[Service]
Type=forking
User={{exist_instuser}}
Environment=JAVA_HOME={{ ansible_env.JAVA_HOME }}
ExecStart=cd {{ exist_path }} && bin/startup.sh
ExecStop=cd {{ exist_path }} && bin/shutdown.sh
Restart=on-abort
StandardOutput=null

[Install]
WantedBy=multi-user.target
